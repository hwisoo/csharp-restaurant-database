@{
  Layout = "_Layout";
}
<div class="container">
    <h1>Cuisines List</h1>

    @if (@Model.Count == 0)
    {
    <h3>No Cuisines Added yet!</h3>
    }

    @foreach (var Cuisines in Model)
    {
    <h3><a href='/cuisines/@Cuisines.GetId()'>@Cuisines.GetCuisineType()</a></h3>
    
    <h3><a href="/cuisines/@Cuisines.GetId()/delete">Delete Cuisine</a></h3>
    <br>
    }

    <h3><a href="/cuisines/new">Add new Cuisine</a></h3>
    

    <h3><a href='/'>Back home</a></h3>
</div>