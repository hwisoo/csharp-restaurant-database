@{
  Layout = "_Layout";
}
<div class="container">
    <h1>Restaurants List</h1>

    @if (@Model.Count == 0)
    {
    <h3>No Restaurants Added yet!</h3>
    }

    @foreach (var Restaurant in Model)
    {
    <h3><a href='/restaurants/@Restaurant.GetId()'>@Restaurant.GetName()</a></h3>
    <h3><a href='/restaurants/@Restaurant.GetId()/edit'>Edit This Restaurant</a></h3>
    <h3><a href='/restaurants/@Restaurant.GetId()/delete'>Delete This Restaurant</a></h3>
    <br>
    }

    <p><a href='/'>Back home</a></p>
</div>